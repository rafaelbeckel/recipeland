    "keywords": ["recipes", "food", "hellofresh"],
    "license": "WTFPL",
    "authors": [
        {
            "name": "Rafael Beckel",
            "email": "rafaelbeckel@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "filp/whoops": "^2.1",
        "vlucas/phpdotenv": "^2.4",
        "symfony/http-foundation": "^4.0",
        "nikic/fast-route": "^1.3",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.0",
        "psr/cache": "^1.0",
        "monolog/monolog": "^1.23"
    },
    "autoload": {
        "psr-4": {
